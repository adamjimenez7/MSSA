@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-3 mt-5">@ViewData["Title"]</h1>
</div> 

<div class="row justify-content-center">
    <div class="col-md-4 mt-5">
        <blockquote class="blockquote text-center text-uppercase font-italic">
            <p>"Nothing builds confidence like live ammo."</p>
            <footer class="blockquote-footer">Tim Dorsey</footer>
        </blockquote>
    </div>

    <div class="col-md-6 mt-5 goto-box">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="child-container">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="font-resize" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-resize" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-resize" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-secondary font-resize">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
